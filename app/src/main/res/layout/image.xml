<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_50"
        android:layout_marginLeft="@dimen/value_10dp"
        android:layout_marginTop="@dimen/value_5dp"
        android:layout_marginRight="@dimen/value_10dp"
        android:layout_marginBottom="@dimen/value_5dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="@dimen/value_10dp"
        app:cardCornerRadius="@dimen/value_10dp"
        app:cardMaxElevation="@dimen/value_10dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/value_10dp"
                android:layout_marginRight="@dimen/value_10dp"
                android:maxLines="2" />

            <ImageView
                android:id="@+id/remove"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="-2dp"
                android:layout_marginRight="-2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_remove_circle_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>